# fix for problem: http://stackoverflow.com/questions/7165108/in-osx-lion-lang-is-not-set-to-utf8-how-fix
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

export ANT_HOME=~/projects/engines/apache-ant-1.7.1
export M2_HOME=~/projects/engines/maven
export MAVEN_OPTS="-Dfile.encoding=utf-8 -Xmx512m -XX:MaxPermSize=256m "
#export MAVEN_OPTS="-Dfile.encoding=utf-8 -Xmx512m -XX:MaxPermSize=256m -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005"

export GRADLE_HOME=~/projects/engines/gradle-2.2

export BERKELEY_DB_HOME=/usr/local/db-6.1.19/

export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
export JAVA_OPTS="-Dfile.encoding=utf-8 -Xmx1024m -XX:MaxPermSize=512m -Dcom.sun.management.jmxremote"

export GROOVY_HOME=~/projects/groovy
export GANT_HOME=~/projects/gant
export CATALINA_HOME=~/projects/tomcat
export SVN_EDITOR=vim
export MYSQL_HOME=/usr/local/mysql
export NODE_PATH=/usr/local/share/npm/bin
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

export PATH=$JAVA_HOME/bin:/usr/local/bin:$NODE_PATH:$PAX_RUNNER/bin:$ANT_HOME/bin:$M2_HOME/bin:$GRADLE_HOME/bin:$GROOVY_HOME/bin:$GANT_HOME/bin:$PATH
